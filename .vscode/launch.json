{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch App",
            "program": "${workspaceFolder}/${input:programPath}",
            "cwd": "${workspaceFolder}"
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "programPath",
            "description": "Select the entry point for your application",
            "options": [
                "src/index.js",
                "src/App.js"
            ]
        }
    ]
}